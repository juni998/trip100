{{>layout/header}}

{{>layout/bodyHeader}}

<div class="container">
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>가격</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#item}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/item/info/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{price}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/item}}
        </tbody>

    </table>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
