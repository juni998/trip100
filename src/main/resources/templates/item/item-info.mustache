{{>layout/header}}



<div class="container">
    <h1>상품 조회</h1>
    <div class="col-md-4">
        <form>
            <input type="hidden" class="form-control" id="userId" value="{{userId}}" readonly>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{item.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control"  value="{{item.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control"  value="{{item.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" readonly>{{item.content}}</textarea >
            </div>
            <div class="form-group">
                <label for="price">가격</label>
                <input type="number" class="form-control"  value="{{item.price}}" readonly>
            </div>
            <div class="form-group">
                <label for="stockQuantity">재고수량</label>
                <input type="number" class="form-control"  value="{{item.stockQuantity}}" readonly>
            </div>
            <div class="form-group">
                <label for="count">주문수량</label>
                <input type="number" class="form-control" id="count" value="1">
            </div>
            <a href="/order/{{item.id}}" role="button">주문</a>
            <button type="button" class="btn btn-primary" id="btn-cart-save">장바구니 담기</button>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/js/item/item.js"></script>
{{>layout/footer}}